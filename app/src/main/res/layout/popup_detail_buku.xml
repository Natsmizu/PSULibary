<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_popup_round">

        <!-- Tombol Close -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:src="@drawable/close"
            android:contentDescription="close" />

        <!-- Cover Buku -->
        <ImageView
            android:id="@+id/imgCover"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@drawable/sample_cover"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_image_round" />

        <!-- Judul Buku -->
        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LASKAR PELANGI"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="15dp" />

        <!-- Penulis -->
        <TextView
            android:id="@+id/txtPenulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayu"
            android:textSize="18sp"
            android:textColor="#444"/>

        <!-- Tahun -->
        <TextView
            android:id="@+id/txtTahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2001"
            android:textSize="18sp"
            android:textColor="#444"
            android:layout_marginBottom="15dp"/>

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/txtDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi buku akan muncul di sini..."
            android:textSize="16sp"
            android:textColor="#000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>
