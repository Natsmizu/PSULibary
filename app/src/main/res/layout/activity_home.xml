<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- ================== MAIN CONTENT ================== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- ===== HEADER ===== -->
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFBB33">

            <!-- ICON NAVBAR / MENU -->
            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="354dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/menu" />

            <!-- LOGO KANAN -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/logo" />

        </RelativeLayout>

        <!-- ===== LIST BUKU (bisa banyak & scroll) ===== -->
        <ScrollView
            android:id="@+id/scrollBuku"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_above="@+id/bottom_nav"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/containerBuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ================== TEMPLATE ITEM BUKU ================== -->
                <LinearLayout
                    android:id="@+id/itemTemplate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:background="@drawable/backgroud_home"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgBuku"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/laskar_pelangi"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingLeft="12dp">

                        <TextView
                            android:id="@+id/txtJudul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JUDUL BUKU"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/txtPenulis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#444"
                            android:layout_marginTop="4dp"
                            android:text="Nama Penulis"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtDeskripsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#444"
                            android:layout_marginTop="6dp"
                            android:text="Deskripsi singkat..."
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>
                <!-- ================== AKHIR TEMPLATE ================== -->

            </LinearLayout>

        </ScrollView>


        <!-- ===== BOTTOM NAV ===== -->
        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="#FFBB33"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/home" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/book_24" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/profil" />
        </LinearLayout>

    </RelativeLayout>

    <!-- ================== NAVBAR SLIDE (DARI KIRI) ================== -->
    <LinearLayout
        android:id="@+id/nav_left"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_gravity="start">

        <TextView
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>

        <!-- MENU PEMINJAMAN -->
        <TextView
            android:id="@+id/menuPinjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peminjaman Buku"
            android:textSize="18sp"
            android:padding="10dp"/>

        <!-- MENU PENGEMBALIAN -->
        <TextView
            android:id="@+id/menuKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengembalian Buku"
            android:textSize="18sp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buku"
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="18sp"
            android:padding="10dp" />


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
