<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ===================== HEADER ===================== -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FFBB33">

        <!-- Tombol Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/twotone_arrow_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <!-- ===================== NILAI / SKOR ===================== -->
    <LinearLayout
        android:id="@+id/skorLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/header"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtScoreMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="47"
            android:textColor="#FF3A22"
            android:textSize="65sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtScoreTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="/100"
            android:textColor="#FF3A22"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Garis Pemisah -->
    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/skorLayout"
        android:background="#000000" />

    <!-- ===================== LIST PINALTI ===================== -->
    <LinearLayout
        android:id="@+id/listPinalti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineSeparator"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ITEM #1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="terlambat balikin buku"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="18sp"
                android:textColor="#FF3A22" />
        </LinearLayout>

        <!-- ITEM #2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="terlambat balikin buku"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="18sp"
                android:textColor="#FF3A22" />
        </LinearLayout>

        <!-- ITEM #3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="terlambat balikin buku"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="18sp"
                android:textColor="#FF3A22" />
        </LinearLayout>

    </LinearLayout>

    <!-- ===================== FOOTER ===================== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#FFBB33" />

</RelativeLayout>
