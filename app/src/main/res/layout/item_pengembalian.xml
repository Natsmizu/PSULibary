<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="25dp"
    android:background="#EDEDED">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!-- FOTO BUKU -->
        <ImageView
            android:id="@+id/imgBuku"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/laskar"
            android:layout_alignParentStart="true"
            />

        <!-- TEXT AREA -->
        <LinearLayout
            android:id="@+id/textArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/imgBuku"
            android:layout_marginStart="15dp"
            android:layout_alignTop="@id/imgBuku"
            android:layout_alignBottom="@id/imgBuku">

            <TextView
                android:id="@+id/tvJudul"
                android:text="Judul Buku"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_marginTop="5dp"
                android:text="Deskripsi bukuâ€¦"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- BUTTON PENGEMBALIAN DI POJOK KANAN BAWAH -->
        <TextView
            android:id="@+id/btnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_green"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:text="Pengembalian"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/imgBuku"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
