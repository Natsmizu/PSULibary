<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gold_gradient"
        android:padding="20dp">

        <!-- ================== LOGO + TITLE ================== -->
        <LinearLayout
            android:id="@+id/headerLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="PSU LIBRARY"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </LinearLayout>

        <!-- ================== FORM INPUT ================== -->
        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/headerLogo"
            android:layout_marginTop="50dp"
            android:paddingHorizontal="10dp">

            <!-- NIM -->
            <EditText
                android:id="@+id/inputNim"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="NIM"
                android:background="@drawable/rounded_white"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <!-- Username -->
            <EditText
                android:id="@+id/inputUsername"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:hint="Username"
                android:background="@drawable/rounded_white"
                android:paddingLeft="20dp"
                android:textSize="18sp" />

            <!-- Fakultas spinner -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_white">

                <Spinner
                    android:id="@+id/spinnerFakultas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="13dp"
                    android:src="@drawable/arrow_drop_down" />
            </RelativeLayout>

            <!-- Prodi spinner -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_white">

                <Spinner
                    android:id="@+id/spinnerProdi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="13dp"
                    android:src="@drawable/arrow_drop_down" />
            </RelativeLayout>

            <!-- Password -->
            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:hint="password"
                android:background="@drawable/rounded_white"
                android:paddingLeft="20dp"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <!-- Verifikasi Password -->
            <EditText
                android:id="@+id/inputVerifPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:hint="verifikasi password"
                android:background="@drawable/rounded_white"
                android:paddingLeft="20dp"
                android:inputType="textPassword"
                android:textSize="18sp" />

            <!-- ================== TOMBOL DAFTAR ================== -->
            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="DAFTAR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_blue" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
